= link_to board_task_path(task) do
  .card
    - if task.eyecatch.attached? 
      .card_image
        = image_tag task.eyecatch
    .task_content
      .task_title
        = task.title
      .task_content
        = task.content
        
      .card_detail
        = image_tag @board.user.avatar_image 
        %div
          %p= task.author_name
          %p= task.display_created_at
        