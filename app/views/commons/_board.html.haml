= link_to board_path(board) do
  .card
    - if board.eyecatch.attached? 
      .card_image
        = image_tag board.eyecatch
    .card_description
      .card_title
        = board.title
      
      .card_detail
        = image_tag board.user.avatar_image 
        %div
          %p= board.author_name
          %p= board.display_created_at