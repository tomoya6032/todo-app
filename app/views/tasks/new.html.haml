.container
  %ul 
    - @task.errors.full_messages.each do |message|
      %li= message 
  
  %h2 New Card
  = form_with(model: @task, url: board_tasks_path(@task.board), local:true) do |f|
    %div 
      = f.label :eyecatch, 'アイキャッチ'
    %div 
      = f.file_field :eyecatch
    %div
      = f.label :title, 'Name'
    %div 
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div 
      = f.text_area :content
    -# %div 
    -#   = f.label :deadline, class: 'deadline'
    -# %div
    -#   = f.datetime_select :deadline, class: 'deadline'
    %div
      = f.label :limit, '期限の設定'
    %div  
      = datetime_select :date, Date.today, use_month_numbers: true

    = f.submit '保存', class: 'btn-primary'
