.container
  %ul 
    - @task.errors.full_messages.each do |message|
      %li= message 
  
  %h2 New Card
  = form_with(model: @task, url: board_tasks_path, local:true) do |f|
    %div
      = f.label :title, 'Name'
    %div 
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div 
      = f.text_area :content
    %div
      = f.label :deadline, "期限"
    %div  
      = f.datetime_select :deadline

    = f.submit '保存', class: 'btn-primary'
